<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Photo Gallery</title>
</head>
<body>
  <h1>Photo Gallery</h1>
  <form action="/photos" method="get">
    <label for="theme">Theme:</label>
    <input type="text" id="theme" name="theme" placeholder="Enter theme" required>
    <label for="width">Width:</label>
    <input type="number" id="width" name="width" placeholder="Enter width" required>
    <label for="height">Height:</label>
    <input type="number" id="height" name="height" placeholder="Enter height" required>
    <button type="submit">Search</button>
  </form>
  <ul>
    <% photos.forEach(photo => { %>
      <li>
        <img src="<%= photo.urls.raw %>&w=<%= width %>&h=<%= height %>" alt="<%= photo.alt_description %>" width="<%= width %>" height="<%= height %>">
        <p><strong>Photographer:</strong> <%= photo.user.name %></p>
      </li>
    <% }); %>
  </ul>
</body>
</html>